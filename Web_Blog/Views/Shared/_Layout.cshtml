    <script>

        let slideIndex = 0;
        const slides = document.querySelector('#slideshow .slides');
        const images = document.querySelectorAll('#slideshow .slides img');
        const imageWidth = images[0].clientWidth;

        showSlides();

        function showSlides() {
            slideIndex++;
            slides.style.transform = `translateX(-${slideIndex * imageWidth}px)`;

            if (slideIndex === images.length) {
                slideIndex = 0;
                setTimeout(() => slides.style.transition = 'none', 500); // Tạm thời loại bỏ hiệu ứng chuyển đổi
                setTimeout(() => slides.style.transform = `translateX(0)`, 600); // Quay lại ảnh đầu tiên
                setTimeout(() => slides.style.transition = 'transform 0.5s ease', 700); // Khôi phục hiệu ứng chuyển đổi
            }

            setTimeout(showSlides, 2000); // Thay đổi 2000 nếu bạn muốn thay đổi tốc độ chuyển đổi
        }

    </script>
