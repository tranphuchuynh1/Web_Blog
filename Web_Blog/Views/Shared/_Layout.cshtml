        /*----------------------------Contact-----------------------------*/
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #fff;
            padding: 10px;
            border: 1px solid #ccc;
            border-top: none; /* Loại bỏ đường viền trên của danh sách */
