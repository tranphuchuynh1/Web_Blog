            max-width: 900px; /* Điều chỉnh kích thước của slideshow */
            margin: auto;
            overflow: hidden;
        }

        .slides {
            display: flex;
            transition: transform 0.5s ease;
        }

            .slides figure {
                width: 20%; /* Mỗi ảnh chiếm 20% chiều rộng của container */
                text-align: center;
            }

            .slides img {
                width: 70%; /* Kích thước đầy đủ của ảnh */
                height: auto;
                margin-right:3%;
                border-radius: 50%; /* Để ảnh trở thành hình tròn */
            }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #fff;
            padding: 10px;
            border: 1px solid #ccc;
            border-top: none; /* Loại bỏ đường viền trên của danh sách */
        }

        .nav-item {
            position: relative; /* Đảm bảo .dropdown-menu được định vị tương đối với .nav-item */
        }

        .dropdown-menu li {
            background-color: #fff; /* Màu nền mặc định */
            color: #000; /* Màu chữ mặc định */
            padding: 10px;
        }

            .dropdown-menu li:hover {
                background-color: green; /* Màu nền khi di chuột vào */
                color: #fff; /* Màu chữ khi di chuột vào */
            }

        .dropdown-menu.show {
            display: block;
        }

</style>
   

