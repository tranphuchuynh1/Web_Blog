        .nav-item {
            position: relative; /* Đảm bảo .dropdown-menu được định vị tương đối với .nav-item */
        }

        .dropdown-menu li {
            background-color: #fff; /* Màu nền mặc định */
            color: #000; /* Màu chữ mặc định */
            padding: 10px;
        }

            .dropdown-menu li:hover {
                background-color: green; /* Màu nền khi di chuột vào */
                color: #fff; /* Màu chữ khi di chuột vào */
            }

        .dropdown-menu.show {
            display: block;
        }
        /*----------------------------Contact-----------------------------*/
        html,
